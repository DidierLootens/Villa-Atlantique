    <script>
        // Configuration Stripe (REMPLACEZ par votre cl√© publique)
        const stripe = Stripe('pk_test_VOTRE_CLE_PUBLIQUE_STRIPE');
        
        // Calcul du prix
        const PRICE_PER_NIGHT = 150; // Prix par nuit en euros
        
        document.getElementById('checkin').addEventListener('change', calculatePrice);
        document.getElementById('checkout').addEventListener('change', calculatePrice);
        
        function calculatePrice() {
            const checkin = new Date(document.getElementById('checkin').value);
            const checkout = new Date(document.getElementById('checkout').value);
            
            if (checkin && checkout && checkout > checkin) {
                const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
                const total = nights * PRICE_PER_NIGHT;
                
                document.getElementById('totalPrice').textContent = total + ' ‚Ç¨';
                document.getElementById('nightsCount').textContent = `${nights} nuit${nights > 1 ? 's' : ''} √ó ${PRICE_PER_NIGHT}‚Ç¨`;
            } else {
                document.getElementById('totalPrice').textContent = '0 ‚Ç¨';
                document.getElementById('nightsCount').textContent = 'S√©lectionnez vos dates';
            }
        }
        
        // Soumission du formulaire
        document.getElementById('bookingForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const checkin = new Date(document.getElementById('checkin').value);
            const checkout = new Date(document.getElementById('checkout').value);
            const nights = Math.ceil((checkout - checkin) / (1000 * 60 * 60 * 24));
            const total = nights * PRICE_PER_NIGHT;
            
            if (total === 0) {
                alert('Veuillez s√©lectionner des dates valides.');
                return;
            }
            
            // Afficher le loader
            document.getElementById('loadingOverlay').classList.add('active');
            
            // Ici vous devriez faire un appel √† votre serveur backend
            // pour cr√©er une session de paiement Stripe
            
            // EXEMPLE (vous devez cr√©er votre backend) :
            try {
                // Simulation d'une requ√™te backend
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                // Dans un vrai syst√®me, vous feriez :
                // const response = await fetch('/create-checkout-session', {
                //     method: 'POST',
                //     headers: { 'Content-Type': 'application/json' },
                //     body: JSON.stringify({
                //         checkin: document.getElementById('checkin').value,
                //         checkout: document.getElementById('checkout').value,
                //         guests: document.getElementById('guests').value,
                //         name: document.getElementById('name').value,
                //         email: document.getElementById('email').value,
                //         phone: document.getElementById('phone').value,
                //         message: document.getElementById('message').value,
                //         amount: total
                //     })
                // });
                // const session = await response.json();
                // await stripe.redirectToCheckout({ sessionId: session.id });
                
                document.getElementById('loadingOverlay').classList.remove('active');
                alert('Fonctionnalit√© de d√©monstration !\n\n' +
                      'Pour activer les paiements r√©els :\n' +
                      '1. Cr√©ez un compte Stripe (stripe.com)\n' +
                      '2. Configurez un backend pour cr√©er des sessions de paiement\n' +
                      '3. Remplacez la cl√© publique Stripe dans le code\n\n' +
                      `R√©servation : ${nights} nuits pour ${total}‚Ç¨`);
                
            } catch (error) {
                document.getElementById('loadingOverlay').classList.remove('active');
                alert('Une erreur est survenue. Veuillez r√©essayer.');
                console.error(error);
            }
        });
        
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
        
        // Date minimale = aujourd'hui
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('checkin').setAttribute('min', today);
        document.getElementById('checkout').setAttribute('min', today);
        
        // Mettre √† jour la date de checkout minimale quand checkin change
        document.getElementById('checkin').addEventListener('change', function() {
            const checkinDate = new Date(this.value);
            checkinDate.setDate(checkinDate.getDate() + 1);
            const minCheckout = checkinDate.toISOString().split('T')[0];
            document.getElementById('checkout').setAttribute('min', minCheckout);
        });
    </script>
</body>
